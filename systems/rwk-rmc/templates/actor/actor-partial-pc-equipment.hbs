{{!-- Equipment Tab --}}
<section class="tab equipment-bg {{tabs.equipment.id}} {{tabs.equipment.cssClass}}" data-tab="{{tabs.equipment.id}}" data-group="{{tabs.equipment.group}}" id="equipment">
  {{!-- Melee Weapons --}}
  {{#* inline "weaponRow"}}
    <li class="grid-col-span-8 weapon grid-col-gap-5" data-item-id="{{id}}" data-item-slot="{{type}}{{add index 1}}">
      <input type="checkbox"
             name="items.{{id}}.system.equipped"
             data-dtype="Boolean" {{checked weapon.system.equipped}}/>
      <img class="icon-filter" src="{{weapon.img}}" title="{{weapon.name}}" alt="{{weapon.name}}"
           width="22" height="22" data-drag="true" data-drag-action="item">
      <div class="attack-buttons">
        <div class="rollable weapon-button icon-filter" data-action="rollWeaponAttack" data-drag="true" data-drag-action="weapon" title="{{localize 'RMC.Roll'}}">&nbsp;</div>
        {{#if canBackstab}}
          <div class="rollable backstab-button icon-filter" data-action="rollWeaponAttack" data-drag="true" data-drag-action="weapon">&nbsp;</div>
        {{/if}}
      </div>
      <input class="weapon-name" type="text"
             name="items.{{id}}.name"
             value="{{weapon.name}}"/>
      <input class="disabled" type="text"
             name="items.{{id}}.system.toHit"
             value="{{weapon.system.toHit}}"
             readonly
      />
      <input class="weapon-damage disabled" type="text"
             name="items.{{id}}.system.damage"
             value="{{weapon.system.damage}}"
             readonly
      />
      {{#if melee}}
        <input class="weapon-notes" type="text"
               name="items.{{id}}.system.description.summary"
               value="{{{weapon.system.description.summary}}}"/>
      {{else}}
        <input class="weapon-notes" type="text"
               name="items.{{id}}.system.range"
               value="{{weapon.system.range}}"/>
      {{/if}}
      <div>
        <a class="item-control" title="{{localize 'RMC.ItemEdit'}}" data-action="itemEdit"><i class="fas fa-edit"></i></a>
        <a class="item-control" title="{{localize 'RMC.ItemDelete'}}" data-action="itemDelete"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/inline}}
  <div class="box-title">{{localize "RMC.MeleeWeapons"}}</div>
  <ol class="weapon-list box-border">
    <li class="grid-col-span-8 weapon-list-header">
      <div title="{{localize 'RMC.Equipped'}}"><i class="fa-solid fa-hand-holding"></i></div>
      <div></div>
      <div title="{{localize 'RMC.Roll'}}"></div>
      <div>{{localize "RMC.Name"}}</div>
      <div>{{localize "RMC.ToHit"}}</div>
      <div>{{localize "RMC.Damage"}}</div>
      <div>{{localize "RMC.Notes"}}</div>
      <div>
        <a class="item-control" title="{{localize 'RMC.ItemCreate'}}" data-type="weapon" data-action="itemCreate"
           data-melee=1>
          <i class="fas fa-plus"></i>
          {{localize "RMC.Add"}}
        </a>
      </div>
    </li>
    {{#each equipment.weapons.melee as |weapon index|}}
      {{> weaponRow weapon=weapon id=weapon._id melee=true index=index canBackstab=../system.config.showBackstab}}
    {{/each}}
  </ol>

  {{!-- Ranged Weapons --}}
  <div class="box-title">{{localize "RMC.RangedWeapons"}}</div>
  <ol class="weapon-list box-border">
    <li class="grid-col-span-8 weapon-list-header">
      <div title="{{localize 'RMC.Equipped'}}"><i class="fa-solid fa-hand-holding"></i></div>
      <div></div>
      <div title="{{localize 'RMC.Roll'}}"></div>
      <div>{{localize "RMC.Name"}}</div>
      <div>{{localize "RMC.ToHit"}}</div>
      <div>{{localize "RMC.Damage"}}</div>
      <div>{{localize "RMC.Range"}}</div>
      <div>
        <a class="item-control" title="{{localize 'RMC.ItemCreate'}}" data-type="weapon" data-action="itemCreate">
          <i class="fas fa-plus" data-melee=0></i>
          {{localize "RMC.Add"}}
        </a>
      </div>
    </li>
    {{#each equipment.weapons.ranged as |weapon index|}}
      {{> weaponRow weapon=weapon id=weapon._id melee=false index=index canBackstab=../system.config.showBackstab}}
    {{/each}}
  </ol>

  {{!-- {{> systems/RMC/templates/actor-partial-npc-equipment.html }} --}}
</section>
{{!-- End Equipment Tab --}}