<section class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{! Sheet Header }}
  <header class="sheet-header">
    {{! Header stuff goes here }}
    <img
      class="profile-img"
      src="{{document.img}}"
      data-action="editImage"
      data-edit="img"
      data-type="Image"
      alt="Portrait"
      title="{{document.name}}"
      height="100"
      width="100"
    />
    <img src="{{ portrait.src }}" 
      data-action="editImage"
      data-edit="img"
      data-type="Image"
      alt="Portrait" >
      {{!-- alt="{{ @root.actor.name }}"> --}}

    <div class="header-fields">
      <div class="document-name">{{ actor.name }}</div>
      <h1 class="charname">
        <input
          name="name"
          type="text"
          value="{{actor.name}}"
          placeholder="Name"
        />
      </h1>
      <div class="resources grid grid-2col">{{! resources here }}</div>
      <div class="abilities grid grid-3col">{{! abilities here }}</div>
      <div class="resource flex-group-center">
        <label for="system.hitpoints.value" class="resource-label">{{localize
            "RMC.Hitpoints"
          }}</label>
        <div class="resource-content flexrow flex-center flex-between">
          <input
            id="system.hitpoints.value"
            type="text"
            name="system.hitpoints.value"
            value="{{system.hitpoints.value}}"
            data-dtype="Number"
          />
          <span> / </span>
          <input
            type="text"
            name="system.hitpoints.max"
            value="{{system.hitpoints.max}}"
            data-dtype="Number"
          />
        </div>
      </div>
    </div>
  </header>
</section>